  <!--查询所有菜单-->
    <select id="queryAllMenu"  resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List" />
        from tb_menu
        <where>
            <if test="title!=null and title!=''">
                and title like concat('%',#{title},'%')
            </if>
            <if test="available!=null">
                and available=#{available}
            </if>
            <if test="id!=null">
                and (id=#{id} or pid=#{id})
            </if>
        </where>
    </select>

  <select id="queryMenuByUid" resultMap="BaseResultMap">
      SELECT t3.* FROM tb_role_users t1  INNER JOIN  tb_role_menu t2 ON t1.rid=t2.rid
                                           INNER JOIN tb_menu  t3 ON t2.mid=t3.id
      WHERE t3.available=  #{available}
      AND   t1.uid      =  #{uid}
  </select>

  <!--查询子菜单数量决定是否可以删除-->
  <select id="queryMenuByPid" resultType="Integer">
